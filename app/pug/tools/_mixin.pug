//-BEGIN svg sprite
mixin icon(iconName, className, modific)
  if(className && !modific)
    svg(class="svg-icon " + className)
      use(xlink:href="img/svg/symbol/sprite.svg#" + iconName)
  else if(modific)
    svg(class="svg-icon " + className + ' ' + modific)
      use(xlink:href="img/svg/symbol/sprite.svg#" + iconName)
  else
    svg(class="svg-icon")
      use(xlink:href="img/svg/symbol/sprite.svg#" + iconName)

