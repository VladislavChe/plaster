doctype html
head
  meta(charset='UTF-8')

  // Title
  block title
  // /Title

  // Favicon
  <link rel="icon" href="img/src/favicon.ico" type="image/x-icon">
  // /Favicon
  // OG Tags
  meta(name='description' content='Portfolio frontend developer')
